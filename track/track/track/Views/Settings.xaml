<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="track.Views.Settings">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Choose your options"
                VerticalOptions="CenterAndExpand" ></Label>
                   <Button  Clicked="ChooseBlue" Text="Choose blue"  Margin="0,10,0,0"   BackgroundColor="#1c74da" FontSize="Small" TextColor="White" FontFamily="Times New Roman Italic" ></Button>
                    <Button  Clicked="ChooseRed" Text="Choose red"  Margin="0,10,0,0"   BackgroundColor="Red" FontSize="Small" TextColor="White" FontFamily="Times New Roman Italic" ></Button>
                    <Button  Clicked="ChooseGreen" Text="Choose green"  Margin="0,10,0,0"   BackgroundColor="Green" FontSize="Small" TextColor="White" FontFamily="Times New Roman Italic" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>